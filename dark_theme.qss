QMainWindow {
    background-color: #2b2b2b;
    color: #ffffff;
}

QPushButton {
    background-color: #404040;
    border: 1px solid #555;
    padding: 8px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #505050;
}

QLineEdit, QComboBox {
    background-color: #3c3c3c;
    border: 1px solid #555;
    padding: 6px;
    border-radius: 4px;
    color: white;
}

QListWidget {
    background-color: #3c3c3c;
    border: 1px solid #555;
    color: white;
}
